<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardBackgroundColor="@color/backgroundCard"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:cardMaxElevation="4dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/txt_date"
                style="@style/TextAppearance.AppCompat.txtsubtitlebottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="30 November 2019" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/txt_time"
                style="@style/TextAppearance.AppCompat.txtsubtitlebottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="18:30" app:layout_constraintTop_toBottomOf="@+id/txt_date"
                app:layout_constraintEnd_toEndOf="@+id/txt_date" app:layout_constraintStart_toStartOf="@+id/txt_date"/>

        <TextView
                android:id="@+id/txt_vs"
                style="@style/TextAppearance.AppCompat.score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":" android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/txt_time"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
                android:id="@+id/score_home"
                style="@style/TextAppearance.AppCompat.score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1" android:layout_marginEnd="32dp" app:layout_constraintEnd_toStartOf="@+id/txt_vs"
                app:layout_constraintTop_toTopOf="@+id/txt_vs"
        />

        <TextView
                android:id="@+id/score_away"
                style="@style/TextAppearance.AppCompat.score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1"
                app:layout_constraintTop_toTopOf="@+id/txt_vs"
                app:layout_constraintStart_toEndOf="@+id/txt_vs"
                android:layout_marginStart="32dp"/>

        <TextView
                android:id="@+id/name_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Chealsea"
                app:layout_constraintEnd_toStartOf="@+id/score_home"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/txt_vs" app:layout_constraintBottom_toBottomOf="@+id/txt_vs"/>

        <TextView
                android:id="@+id/name_away"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Arsenal"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@+id/txt_vs" app:layout_constraintBottom_toBottomOf="@+id/txt_vs"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toEndOf="@+id/score_away" android:layout_marginStart="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>
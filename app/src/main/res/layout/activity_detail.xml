<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout_main"
        tools:context=".ui.detail.DetailActivity">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <include
        layout="@layout/custom_toolbar" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/layout_detail"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_bottom"
                    android:paddingBottom="32dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:paddingBottom="32dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                            android:id="@+id/img_poster"
                            android:layout_width="150dp"
                            android:layout_height="225dp"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="32dp"
                            android:src="@color/colorPrimaryDark"
                            android:contentDescription="@string/gambar"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="ContentDescription"/>

                    <TextView
                            android:id="@+id/txt_title"
                            style="@style/TextAppearance.AppCompat.title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="24dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toEndOf="@+id/img_poster"
                            app:layout_constraintTop_toTopOf="@+id/img_poster"
                            tools:text="Title" />

                    <TextView
                            android:id="@+id/tv_country"
                            style="@style/TextAppearance.AppCompat.txtsubtitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="24dp"
                            android:text="@string/established"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/txt_title"
                            app:layout_constraintTop_toBottomOf="@+id/txt_title" />

                    <TextView
                            android:id="@+id/txt_country"
                            style="@style/TextAppearance.AppCompat.subtitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="24dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="@+id/tv_country"
                            app:layout_constraintTop_toBottomOf="@+id/tv_country"
                            tools:text="2019" />

                    <TextView
                            android:id="@+id/tv_web"
                            style="@style/TextAppearance.AppCompat.txtsubtitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="24dp"
                            android:text="@string/country"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/txt_country"
                            app:layout_constraintTop_toBottomOf="@+id/txt_country" />

                    <TextView
                            android:id="@+id/txt_web"
                            style="@style/TextAppearance.AppCompat.subtitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="24dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/tv_web"
                            app:layout_constraintTop_toBottomOf="@+id/tv_web"
                            tools:text="England" />

                    <TextView
                            android:id="@+id/tv_alternative"
                            style="@style/TextAppearance.AppCompat.txtsubtitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="24dp"
                            android:text="@string/alternate_names"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/txt_web"
                            app:layout_constraintTop_toBottomOf="@+id/txt_web" />

                    <TextView
                            android:id="@+id/txt_alternative"
                            style="@style/TextAppearance.AppCompat.subtitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="24dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/tv_alternative"
                            app:layout_constraintTop_toBottomOf="@+id/tv_alternative"
                            tools:text="Premier League" />

                <!--<TextView-->
                            <!--android:id="@+id/tv_match"-->
                            <!--style="@style/TextAppearance.AppCompat.subtitle"-->
                            <!--android:layout_width="0dp"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_marginEnd="24dp"-->
                            <!--android:text="Match Schedules"-->
                            <!--app:layout_constraintEnd_toEndOf="parent"-->
                            <!--app:layout_constraintStart_toStartOf="@+id/txt_alternative"-->
                            <!--app:layout_constraintBottom_toBottomOf="@+id/img_poster"/>-->


                </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                        android:id="@+id/tv_description"
                        style="@style/TextAppearance.AppCompat.txtsubtitlebottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:text="@string/description"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/layout_top"/>

                <TextView
                        android:id="@+id/txt_description"
                        style="@style/TextAppearance.AppCompat.subtitlebottom"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="24dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/tv_description"
                        app:layout_constraintTop_toBottomOf="@+id/tv_description"
                        tools:text="@tools:sample/lorem/random"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_directions_run"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true"
            android:layout_margin="15dp"
    app:elevation="6dp"
    app:borderWidth="0dp"/>
</RelativeLayout>
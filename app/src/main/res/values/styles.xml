<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolBarStyle" parent="AppTheme">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="TextAppearance.AppCompat.title">
        <item name="android:textColor">@color/textIcon</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.AppCompat.txtsubtitle">
        <item name="android:textColor">@color/textIcon</item>
    </style>

    <style name="TextAppearance.AppCompat.subtitle">
        <item name="android:textColor">@color/textIcon</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.AppCompat.txtsubtitlebottom">
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.AppCompat.subtitlebottom">
        <item name="android:textColor">@color/secondaryText</item>
    </style>

    <style name="TextAppearance.AppCompat.score">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Base.TextAppearance.AppCompat.Button.match">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:color">@color/colorPrimary</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
